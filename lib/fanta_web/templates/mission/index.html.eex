<h2>Listing missions</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for mission <- @missions do %>
    <tr>
      <td><%= mission.name %></td>
      <td><%= mission.user_id %></td>

      <td class="text-right">
        <span><%= link "Show", to: user_mission_path(@conn, :show, @user_id, mission), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: user_mission_path(@conn, :edit, @user_id, mission), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: user_mission_path(@conn, :delete, @user_id, mission), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New mission", to: user_mission_path(@conn, :new, @user_id) %></span>
